<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_backgroud"
    android:orientation="vertical" >

    <include layout="@layout/common_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_20"
        android:background="@color/white"
        android:padding="@dimen/px_20" >

        <EditText
            android:id="@+id/search_friends_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/search_friends_search"
            android:background="@null"
            android:singleLine="true"
            android:inputType="number"
            android:hint="@string/telephone_or_papa_number"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:id="@+id/search_friends_search"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_20"
            android:src="@drawable/common_search" />
    </RelativeLayout>

    <include layout="@layout/common_view_margin20" />

    <RelativeLayout
        android:id="@+id/search_friends_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/px_20" >

        <com.slife.gopapa.view.XCRoundRectImageView
            android:id="@+id/search_friends_icon"
            android:layout_width="@dimen/px_90"
            android:layout_height="@dimen/px_90"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_30"
            android:layout_marginTop="@dimen/px_30"
            android:visibility="gone"
            android:src="@drawable/common_users_icon_default" />

        <TextView
            android:id="@+id/search_friends_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/search_friends_icon"
            android:layout_toRightOf="@+id/search_friends_icon"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/search_friends_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_friends_name"
            android:layout_marginTop="@dimen/px_10"
            android:layout_toRightOf="@+id/search_friends_icon"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <Button
        android:id="@+id/search_friends_sendmsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/px_70"
        android:layout_marginRight="@dimen/px_70"
        android:layout_marginTop="@dimen/px_20"
        android:background="@drawable/text_fillet_green"
        android:padding="@dimen/px_15"
        android:textColor="@color/white"
        android:text="发消息"
         android:visibility="gone"
        android:textSize="@dimen/text_size_18" />
    
       <Button
        android:id="@+id/search_friends_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/px_70"
        android:layout_marginRight="@dimen/px_70"
        android:layout_marginTop="@dimen/px_20"
        android:background="@drawable/text_fillet_green"
        android:padding="@dimen/px_15"
        android:textColor="@color/white"
        android:text="添加好友"
        android:visibility="gone"
        android:textSize="@dimen/text_size_18" />
</LinearLayout>