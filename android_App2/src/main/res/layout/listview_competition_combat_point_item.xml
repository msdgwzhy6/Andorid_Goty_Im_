<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_120"
    android:background="@drawable/selector_relativelayout" >

    <RelativeLayout
        android:id="@+id/listview_competition_combat_point_item_rl"
        android:layout_width="@dimen/px_110"
        android:layout_height="@dimen/px_110"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/px_20" >

        <ImageView
            android:id="@+id/listview_competition_combat_point_item_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/competition"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/listview_competition_combat_point_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#fff" />

        <RelativeLayout
           android:id="@+id/listview_competition_combat_point_item_ischallenge"
            android:layout_width="@dimen/px_40"
            android:layout_height="@dimen/px_40"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:visibility="gone" >

            <ImageView
                android:layout_width="@dimen/px_40"
                android:layout_height="@dimen/px_40"
                android:src="@drawable/orange"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="æŒ‘"
                android:textColor="#fff" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/listview_competition_combat_point_item_combater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/listview_competition_combat_point_item_rl"
        android:layout_toRightOf="@+id/listview_competition_combat_point_item_rl"
        android:textSize="@dimen/px_28" />

    <TextView
        android:id="@+id/listview_competition_combat_point_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listview_competition_combat_point_item_combater"
        android:layout_marginTop="@dimen/px_5"
        android:layout_toRightOf="@+id/listview_competition_combat_point_item_rl"
        android:textColor="#595757"
        android:textSize="@dimen/px_28" />

    <RelativeLayout
        android:layout_width="@dimen/px_150"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/px_40" >

        <TextView
            android:id="@+id/listview_competition_combat_point_item_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/win"
            android:textSize="@dimen/px_30" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/plus2"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/listview_competition_combat_point_item_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/px_30" />
    </RelativeLayout>

    <View
        android:id="@+id/listview_competition_combat_point_item_v"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/px_20"
        android:background="#e5e5e5" />

</RelativeLayout>