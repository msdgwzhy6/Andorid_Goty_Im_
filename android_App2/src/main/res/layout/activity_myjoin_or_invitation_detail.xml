<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px_20"
        android:background="@drawable/shape_for_submit_result"
        android:orientation="vertical"
        android:paddingLeft="@dimen/px_20" >

        <TextView
            android:id="@+id/activity_myjoin_or_invitation_detail_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_30"
            android:layout_marginTop="@dimen/px_30"
            android:text="@string/competition_theme"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#e5e5e5" />

        <RelativeLayout
            android:id="@+id/activity_person_information_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_20"
            android:layout_marginTop="@dimen/px_30" >

            <ImageView
                android:id="@+id/activity_myjoin_or_invitation_detail_head"
                android:layout_width="@dimen/px_120"
                android:layout_height="@dimen/px_120"
                android:src="#000"
                tools:ignore="ContentDescription,ContentDescription" />

            <ImageView
                android:layout_width="@dimen/px_120"
                android:layout_height="@dimen/px_120"
                android:src="@drawable/head"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/activity_myjoin_or_invitation_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_10"
                android:layout_marginTop="@dimen/px_5"
                android:layout_toRightOf="@+id/activity_myjoin_or_invitation_detail_head"
                android:textColor="#323333"
                android:textSize="@dimen/px_30" />

            <ImageView
                android:id="@+id/activity_myjoin_or_invitation_detail_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_10"
                android:layout_marginRight="@dimen/px_10"
                android:layout_marginTop="@dimen/px_10"
                android:layout_toRightOf="@+id/activity_myjoin_or_invitation_detail_name"
                android:src="@drawable/man"
                tools:ignore="ContentDescription" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/activity_myjoin_or_invitation_detail_name"
                android:layout_below="@+id/activity_myjoin_or_invitation_detail_name"
                android:layout_marginLeft="@dimen/px_10"
                android:layout_marginTop="@dimen/px_10" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/medal"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/activity_myjoin_or_invitation_detail_vitality_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px_40"
                    android:text="123"
                    android:textSize="@dimen/px_30" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_40" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_10"
                android:src="@drawable/competition_item"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/activity_myjoin_or_invitation_detail_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_60"
                android:textColor="@color/competition_detail_color" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_40"
            android:layout_marginTop="@dimen/px_10" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_10"
                android:src="@drawable/competition_position"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/activity_myjoin_or_invitation_detail_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_60"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/competition_detail_color" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_40"
            android:layout_marginTop="@dimen/px_10" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_10"
                android:src="@drawable/competition_time"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/activity_myjoin_or_invitation_detail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_60"
                android:textColor="@color/competition_detail_color" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_40"
            android:layout_marginTop="@dimen/px_10" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_10"
                android:src="@drawable/competition_fee"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/activity_myjoin_or_invitation_detail_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_60"
                android:textColor="@color/competition_detail_color" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_40"
            android:layout_marginTop="@dimen/px_10" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_10"
                android:src="@drawable/competition_illustration"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/activity_myjoin_or_invitation_detail_illustration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_60"
                android:textColor="@color/competition_detail_color" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_40"
            android:layout_marginTop="@dimen/px_10" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_10"
                android:src="@drawable/state"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/activity_myjoin_or_invitation_detail_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_60"
                android:textColor="@color/competition_detail_color" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_10" >

            <TextView
                android:id="@+id/activity_myjoin_or_invitation_detail_commit_or_accept"
                android:layout_width="@dimen/px_200"
                android:layout_height="@dimen/px_60"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="@dimen/text_size_16"
                android:visibility="gone"
                android:background="@drawable/selector_invitation" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_30" />
    </LinearLayout>

</LinearLayout>