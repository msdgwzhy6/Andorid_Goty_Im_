<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/listview_ranking_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_105"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/listview_ranking_ranking"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_105"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_17" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_105"
            android:layout_weight="1.5" >

            <com.slife.gopapa.view.XCRoundRectImageView
                android:id="@+id/listview_ranking_head"
                android:layout_width="@dimen/px_80"
                android:layout_height="@dimen/px_80"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/px_10"
                android:background="#00000000"
                tools:ignore="ContentDescription,ContentDescription" />

            <TextView
                android:id="@+id/listview_ranking_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/listview_ranking_head"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#fff"
                android:textSize="@dimen/text_size_17" />
        </RelativeLayout>

        <TextView
            android:id="@+id/listview_ranking_win"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_105"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_17" />

        <TextView
            android:id="@+id/listview_ranking_dogfall"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_105"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_17" />

        <TextView
            android:id="@+id/listview_ranking_lose"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_105"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_17" />

        <TextView
            android:id="@+id/listview_ranking_combat_history"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_105"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_17" />
    </LinearLayout>

</LinearLayout><!-- From: file:/F:/AndroidStudio/Android_App2/android_App2/src/main/res/layout/listview_ranking.xml -->