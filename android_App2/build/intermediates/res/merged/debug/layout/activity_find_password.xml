<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical" >

    <include layout="@layout/common_title" />

    <RelativeLayout
        style="@style/Login_EditText"
        android:layout_marginTop="@dimen/px_40" >

        <EditText
            android:id="@+id/find_pwd_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/find_pwd_get_autocode"
            android:background="@null"
            android:inputType="number"
            android:hint="@string/input_telephone"
            android:singleLine="true" />

        <TextView
            android:id="@+id/find_pwd_get_autocode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_5"
            android:background="@drawable/common_fillet_background_gray"
            android:gravity="center"
            android:padding="@dimen/px_10"
            android:text="@string/verification_code"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <EditText
        android:id="@+id/find_pwd_autocode"
        style="@style/Login_EditText"
        android:layout_marginTop="@dimen/px_20"
        android:hint="@string/input_note_verification_code"
              android:inputType="number"
        android:singleLine="true" />

    <EditText
        android:id="@+id/find_pwd_password1"
        style="@style/Login_EditText"
        android:layout_marginTop="@dimen/px_20"
        android:hint="@string/input_password"
          android:inputType="textPassword"
        android:singleLine="true" />

    <EditText
        android:id="@+id/find_pwd_password2"
        style="@style/Login_EditText"
        android:layout_marginTop="@dimen/px_20"
        android:hint="@string/input_password_again"
          android:inputType="textPassword"
        android:singleLine="true" />

    <Button
        android:id="@+id/find_pwd_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/px_70"
        android:layout_marginRight="@dimen/px_70"
        android:layout_marginTop="@dimen/px_20"
        android:background="@drawable/button_fillet_white"
        android:padding="@dimen/px_15"
        android:text="@string/user_submit"
        android:textColor="@color/common_button_blue"
        android:textSize="@dimen/text_size_18" />

</LinearLayout><!-- From: file:/F:/AndroidStudio/Android_App2/android_App2/src/main/res/layout/activity_find_password.xml -->