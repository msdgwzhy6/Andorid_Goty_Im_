<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_backgroud_selector"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/px_10"
        android:descendantFocusability="blocksDescendants" >

        <com.slife.gopapa.view.XCRoundRectImageView
            android:id="@+id/news_new_friends_icon"
            android:layout_width="@dimen/px_90"
            android:layout_height="@dimen/px_90"
            android:layout_centerVertical="true"
            android:src="@drawable/common_users_icon_default" />

        <TextView
            android:id="@+id/news_new_friends_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/news_new_friends_icon"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginTop="@dimen/px_10"
            android:layout_toRightOf="@+id/news_new_friends_icon"
            android:text="测试名字"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/news_new_friends_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/news_new_friends_name"
            android:layout_below="@+id/news_new_friends_name"
            android:layout_marginTop="@dimen/px_10"
            android:text="@string/news_request_add_friends"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/news_new_friends_addstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_45"
            android:background="@drawable/text_fillet_green"
             android:paddingBottom="@dimen/px_10"
            android:paddingLeft="@dimen/px_15"
            android:paddingRight="@dimen/px_15"
            android:paddingTop="@dimen/px_10"
            android:visibility="gone"
            android:text="@string/accept"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14"/>

        <TextView
            android:id="@+id/news_new_friends_added"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_45"
            android:text="@string/news_new_friends_added"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/text_size_14"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout><!-- From: file:/F:/AndroidStudio/Android_App2/android_App2/src/main/res/layout/listview_news_new_friends.xml -->